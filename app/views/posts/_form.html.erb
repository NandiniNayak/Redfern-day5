<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :summary %>
    <%= f.input :resource_type, collection: [:ClassNotes, :StudyNotes, :Assignments] %>
    <%= f.input :file_url %>
    <%#= f.association :user %>
    <%= f.hidden_field :subject_id, :value => params[:subject_id]%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
